.container
  .row
    .col-md-12
      %h1
        Bank Accounts @result
      = link_to new_bank_account_path, class: 'btn btn-primary' do
        New Bank Account
  %table.table.table-bordered
    %thead
      %tr
        %th Account Number
        %th Client
        %th Balance
        %th Actions
    %tbody
      - @bank_accounts.each do |bank_account|
        %tr
          %td #{bank_account.account_number}
          %td #{bank_account.client}
          %td #{number_to_currency(number_to_money(bank_account.balance), unit: '$ ')}
          %td
            = link_to bank_account_path(bank_account.id), class: "btn btn-primary" do
              Show
